---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Contact | Instructional Design Portfolio">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-serif font-bold mb-4">Get In Touch</h1>
      <p class="text-xl text-neutral-700 dark:text-neutral-300 mb-12">Have a project in mind? Let's discuss how I can help bring your instructional design vision to life.</p>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        <div class="bg-white dark:bg-neutral-800 p-6 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-700">
          <div class="text-4xl text-primary-600 dark:text-primary-400 mb-4">ðŸ“§</div>
          <h3 class="text-xl font-semibold mb-2">Email</h3>
          <p class="text-neutral-600 dark:text-neutral-400 mb-4">For project inquiries and questions</p>
          <a 
            id="email-link" 
            href="#" 
            class="text-primary-600 dark:text-primary-400 hover:underline"
          >
            Contact via email
          </a>
          <script>
            document.addEventListener("DOMContentLoaded", () => {
              const user = "hello";
              const domain = "instructionaldesign.com";
              const emailLink = document.getElementById("email-link");
              emailLink.href = `mailto:${user}@${domain}`;
              emailLink.innerText = `${user}@${domain}`;
            });
          </script>
        </div>
        
        <div class="bg-white dark:bg-neutral-800 p-6 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-700">
          <div class="text-4xl text-primary-600 dark:text-primary-400 mb-4">ðŸ”—</div>
          <h3 class="text-xl font-semibold mb-2">LinkedIn</h3>
          <p class="text-neutral-600 dark:text-neutral-400 mb-4">Connect with me professionally</p>
          <a href="#" class="text-primary-600 dark:text-primary-400 hover:underline">in/instructionaldesigner</a>
        </div>
        
        <div class="bg-white dark:bg-neutral-800 p-6 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-700">
          <div class="text-4xl text-primary-600 dark:text-primary-400 mb-4">ðŸ“…</div>
          <h3 class="text-xl font-semibold mb-2">Schedule a Call</h3>
          <p class="text-neutral-600 dark:text-neutral-400 mb-4">Book a 30-minute consultation</p>
          <a href="#" class="text-primary-600 dark:text-primary-400 hover:underline">View availability</a>
        </div>
      </div>
      
      <div class="bg-white dark:bg-neutral-800 rounded-xl shadow-md border border-neutral-200 dark:border-neutral-700 overflow-hidden">
        <div class="p-8">
          <h2 class="text-2xl font-serif font-semibold mb-6">Send a Message</h2>
          
          <form id="contact-form" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">Name</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  class="w-full px-4 py-3 rounded-lg border border-neutral-300 dark:border-neutral-600 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white dark:bg-neutral-900"
                  required
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">Email</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  class="w-full px-4 py-3 rounded-lg border border-neutral-300 dark:border-neutral-600 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white dark:bg-neutral-900"
                  required
                />
              </div>
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">Subject</label>
              <input 
                type="text" 
                id="subject" 
                name="subject" 
                class="w-full px-4 py-3 rounded-lg border border-neutral-300 dark:border-neutral-600 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white dark:bg-neutral-900"
                required
              />
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">Message</label>
              <textarea 
                id="message" 
                name="message" 
                rows="6" 
                class="w-full px-4 py-3 rounded-lg border border-neutral-300 dark:border-neutral-600 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white dark:bg-neutral-900"
                required
              ></textarea>
            </div>
            
            <div>
              <button 
                type="submit" 
                class="w-full md:w-auto px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors"
              >
                Send Message
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('contact-form');
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // In a production environment, you would handle form submission to a backend service here
        // For now, we'll just show a success message
        alert('Thank you for your message! I will get back to you soon.');
        form.reset();
      });
    });
  </script>
</MainLayout>