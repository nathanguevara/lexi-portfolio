---
import MainLayout from '../../layouts/MainLayout.astro';

const { id } = Astro.params;

// Project data with real content
const projectsData = [
  {
    id: "1",
    title: "Ship Tip Series - ShipStation University",
    client: "ShipStation",
    date: "2023",
    description: "'Ship Tip' video series aims to provide users with a quick overview of a product or feature. These videos take the merchant through a primary in-app feature that can be used to expedite their warehouse shipping process. There are over 50 videos in this series.",
    challenge: "Create quick, accessible video content to help merchants understand platform features and reduce support volume.",
    solution: "Developed a series of 1-4 minute videos combining 'Talking Head' visuals and in-app screen captures. Scripts are created in-house and peer-reviewed before filming.",
    results: "Videos are analyzed on view count and course completion rates, providing insights into merchant interest and engagement.",
    technologies: ["Camtasia", "SkillJar", "Script Writing", "Screen Capture"],
    image: "https://images.pexels.com/photos/4050315/pexels-photo-4050315.jpeg",
    gallery: [
      "https://images.pexels.com/photos/4050315/pexels-photo-4050315.jpeg",
      "https://images.pexels.com/photos/3183150/pexels-photo-3183150.jpeg",
      "https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg"
    ],
    videoUrl: "https://www.youtube.com/watch?v=fJDYDM2WIAQ"
  },
  {
    id: "2",
    title: "ShipStation Certification Program",
    client: "ShipStation",
    date: "2023",
    description: "The official 3-tier certification course to learn about and prove proficiency with ShipStation software. The project was designed to incentivize users to educate themselves about the platform to ease volume for the Sales and Support departments.",
    challenge: "Create a comprehensive certification program that appeals to diverse learners while reducing support volume.",
    solution: "Developed a multi-tier program using SkillJar and Articulate, incorporating text, video, and interactive elements for different learning styles.",
    results: "Successfully implemented company-wide for employee onboarding. Analytics show positive correlation between certification and reduced support needs.",
    technologies: ["SkillJar", "Articulate", "Camtasia", "Photoshop"],
    image: "https://images.pexels.com/photos/3183150/pexels-photo-3183150.jpeg",
    gallery: [
      "https://images.pexels.com/photos/3183150/pexels-photo-3183150.jpeg",
      "https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg",
      "https://images.pexels.com/photos/3184393/pexels-photo-3184393.jpeg"
    ]
  },
  {
    id: "3",
    title: "Muck Rack Help Center",
    client: "Muck Rack",
    date: "2023",
    description: "A complete Help Center redesign focusing on consolidation of articles, step-by-step guides, and updated resources. The project aimed to improve user experience and provide more comprehensive support materials.",
    challenge: "Transform a mixed collection of materials into a cohesive, user-friendly Help Center with consistent style and organization.",
    solution: "Implemented consolidated articles, step-by-step guides with visual aids, and integrated additional resources including Muck Rack Academy courses.",
    results: "Improved user experience with streamlined content and more efficient information access.",
    technologies: ["Technical Writing", "UX Design", "Content Strategy"],
    image: "https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg",
    gallery: [
      "https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg",
      "https://images.pexels.com/photos/3184393/pexels-photo-3184393.jpeg",
      "https://images.pexels.com/photos/3184405/pexels-photo-3184405.jpeg"
    ]
  },
  {
    id: "4",
    title: "Muck Rack Education Videos",
    client: "Muck Rack",
    date: "2023",
    description: "Created animated educational videos using Camtasia, featuring original characters designed by the creative team. These videos provide engaging instruction on platform features.",
    challenge: "Develop engaging video content that maintains brand consistency while effectively teaching platform features.",
    solution: "Utilized Camtasia to create animated videos featuring custom characters, combining entertainment with education.",
    results: "Successfully produced educational content that maintains user engagement while effectively conveying information.",
    technologies: ["Camtasia", "Animation", "Video Production"],
    image: "https://images.pexels.com/photos/3184393/pexels-photo-3184393.jpeg",
    gallery: [
      "https://images.pexels.com/photos/3184393/pexels-photo-3184393.jpeg",
      "https://images.pexels.com/photos/3184405/pexels-photo-3184405.jpeg",
      "https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg"
    ]
  },
  {
    id: "5",
    title: "Roller Derby Rules Project",
    client: "Arizona Derby Dame Regulators",
    date: "2023",
    description: "A collaborative project created for the 2023 Roller Rage tournament, designed to help skaters transition from WFTDA to RDCL rulesets.",
    challenge: "Create effective training materials with limited resources for skaters learning new rule systems.",
    solution: "Developed an accessible online learning module using Articulate Rise to explain ruleset differences.",
    results: "Successfully helped skaters transition between different derby rule systems for the tournament.",
    technologies: ["Articulate Rise", "Technical Writing", "Sports Education"],
    image: "https://images.pexels.com/photos/2005992/pexels-photo-2005992.jpeg",
    gallery: [
      "https://images.pexels.com/photos/2005992/pexels-photo-2005992.jpeg",
      "https://images.pexels.com/photos/3184393/pexels-photo-3184393.jpeg",
      "https://images.pexels.com/photos/3184405/pexels-photo-3184405.jpeg"
    ]
  }
];

const project = projectsData.find(p => p.id === id);

if (!project) {
  return Astro.redirect('/projects');
}
---

<MainLayout title={`${project.title} | Alexandra Scarpello`}>
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <a href="/projects" class="inline-flex items-center text-primary-600 hover:text-primary-800 dark:text-primary-400 dark:hover:text-primary-300 mb-8 transition">
        <span class="mr-2">‚Üê</span> Back to Projects
      </a>
      
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-serif font-bold mb-4">{project.title}</h1>
      
      <div class="flex flex-wrap gap-2 mb-8">
        <div class="bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 px-3 py-1 rounded-full text-sm font-medium">
          Client: {project.client}
        </div>
        <div class="bg-secondary-100 dark:bg-secondary-900 text-secondary-800 dark:text-secondary-200 px-3 py-1 rounded-full text-sm font-medium">
          Completed: {project.date}
        </div>
      </div>
      
      <div class="mb-8">
        <div class="aspect-w-16 aspect-h-9 overflow-hidden rounded-xl bg-neutral-100 dark:bg-neutral-800 mb-4">
          <img 
            src={project.image} 
            alt={project.title}
            class="w-full h-full object-cover"
          />
        </div>
        
        <div class="grid grid-cols-3 gap-4">
          {project.gallery.map((img) => (
            <div class="aspect-w-4 aspect-h-3 overflow-hidden rounded-lg bg-neutral-100 dark:bg-neutral-800">
              <img 
                src={img} 
                alt="Project gallery image"
                class="w-full h-full object-cover"
              />
            </div>
          ))}
        </div>
      </div>
      
      <div class="prose prose-lg dark:prose-invert max-w-none mb-8">
        <p>{project.description}</p>
        
        <h2>The Challenge</h2>
        <p>{project.challenge}</p>
        
        <h2>Solution Approach</h2>
        <p>{project.solution}</p>
        
        <h2>Results</h2>
        <p>{project.results}</p>
      </div>
      
      <div class="mb-12">
        <h3 class="text-xl font-semibold mb-4">Technologies & Methods Used</h3>
        <div class="flex flex-wrap gap-2">
          {project.technologies.map(tech => (
            <span class="bg-neutral-100 dark:bg-neutral-800 text-neutral-800 dark:text-neutral-200 px-3 py-1 rounded-full text-sm">
              {tech}
            </span>
          ))}
        </div>
      </div>
      
      {project.videoUrl && (
        <div class="mb-12">
          <h3 class="text-xl font-semibold mb-4">Project Video</h3>
          <div class="aspect-w-16 aspect-h-9 overflow-hidden rounded-xl bg-neutral-100 dark:bg-neutral-800">
            <iframe
              src={`https://www.youtube.com/embed/${project.videoUrl.split('v=')[1]}`}
              title="Project Video"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              class="w-full h-full"
            ></iframe>
          </div>
        </div>
      )}
      
      <div class="border-t border-neutral-200 dark:border-neutral-700 pt-8">
        <h3 class="text-2xl font-serif font-semibold mb-6">Interested in a similar solution?</h3>
        <a href="/contact" class="inline-block bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-6 rounded-lg transition">
          Let's discuss your project
        </a>
      </div>
    </div>
  </div>
</MainLayout>